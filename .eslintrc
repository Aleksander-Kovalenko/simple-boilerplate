{
  "extends": [
    "airbnb"
  ],
  "globals": {
    "document": true
  },
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error", "log"] }],
    "import/no-unresolved": ["off"],
    "import/extensions": ["off"],
    "react/react-in-jsx-scope": ["off"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  }
}
